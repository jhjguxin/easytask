<h1>Listing tasks</h1>

<table>
  <tr>
    <th>Name</th>
    <th>finished</th>
    <th>action</th>
  </tr>

<% @tasks.each do |task| %>
  <tr>
    <td><%= task.name %></td>
    <td><%= task.finished %></td>
    <td><%= link_to 'Show', task %>
    <%= link_to 'Edit', edit_task_path(task) %>
    <%= link_to 'Destroy', task, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Task', new_task_path %>
