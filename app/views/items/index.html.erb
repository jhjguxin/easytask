<h1>Listing items</h1>

<table>
  <tr>
    <th>name</th>
    <th>Count</th>
    <th>Task</th>
    <th>finished</th>
    <th></th>
    <th></th>
  </tr>

<% @items.each do |item| %>
  <tr>
    <td><%= item.name %></td>
    <td><%= item.count %></td>
    <td><%= item.task %></td>
    <td><%= item.finished %></td>
    <td><%= link_to 'Show', item %></td>
    <td><%= link_to 'Edit', edit_item_path(item) %></td>
    <td><%= link_to 'Destroy', item, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

